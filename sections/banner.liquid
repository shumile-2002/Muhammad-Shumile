

<section class="banner">
  <div class="ann-bar">
    <div class="custom-page-width">
      <div class="ann-bar-content">
        <h3 class="logo-text">{{ section.settings.logo_text }}</h3>
        <p class="slogan-text">{{ section.settings.slogan_text }}</p>
        <a href="#" class="bar-button">
          {{ section.settings.bar_button_text }}
        </a>
      </div>
    </div>
  </div>
  <div class="main-banner">
    <div class="banner-container">
      <img src="https://cdn.shopify.com/s/files/1/0616/3801/7089/files/main-banner.png?v=1725297871" class="banner-image desktop-banner">
      <img src="" class="banner-image mobile-banner">
    </div>

    <div class="banner-content">
      <div class="banner-title"><h2>{{ section.settings.banner-title }}</h2></div>
      <div class="banner-text"><p>{{ section.settings.banner_text }}</p></div>
      <div class="banner-button">
        <a href="#" class="">{{ section.settings.banner_button_text }}</a>
      </div>
    </div>
  </div>

  <div class="banner-bottom custom-page-width">
    <p>SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
  </div>
</section>



<style>
  /* Remove default content */
  .announcement-bar-section, .section-header, .footer {
    display: none;
  }
</style>


{% schema %}
  {
    "name": "Banner",
    "settings": [
      {
        "type": "text",
        "id": "logo_text",
        "label": "Logo Text"
      },
      {
        "type": "text",
        "id": "slogan_text",
        "label": "Bar Slogan Text"
      },
      {
        "type": "text",
        "id": "bar_button_text",
        "label": "Bar Button Text"
      },
      {
        "type": "text",
        "id": "banner-title",
        "label": "Banner Title"
      },
      {
        "type": "text",
        "id": "banner_text",
        "label": "Banner Content"
      },
      {
        "type": "text",
        "id": "banner_button_text",
        "label": "Banner Button Text"
      }
    ]
  }
{% endschema %}